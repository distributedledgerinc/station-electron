{
  "name": "station-electron",
  "version": "1.0.0",
  "description": "A desktop application to interact with Terra Core.",
  "author": "Terra <engineering@terra.money> (https://terra.money)",
  "build": {
    "appId": "money.terra.station",
    "productName": "Terra Station (Staging)",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.financial"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 370
      }
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "main": "public/electron.js",
  "dependencies": {
    "bech32": "^1.1.3",
    "bip32": "^2.0.4",
    "bip39": "^3.0.2",
    "crypto-js": "^3.1.9-1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "secp256k1": "^3.7.1"
  },
  "devDependencies": {
    "electron": "^5.0.8",
    "electron-builder": "^21.1.5"
  },
  "scripts": {
    "start": "LOCAL=true yarn electron .",
    "build": "yarn electron-builder -mw",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prebuild": "react-scripts build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
